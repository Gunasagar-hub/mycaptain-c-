//write a c++ program to access the elements of an array using pointers

using namespace std;

int main()
{
    int arr[5];
    cout<<"Enter elements:";
    for(int i=0;i<5;i++){
        cin>>arr[i];
    }
    cout<<"You entered: ";
    int *p;
    p=arr;
    for(int j=0;j<5;j++){
        cout<<*p<<endl;
        p++;
    }


    return 0;
}
